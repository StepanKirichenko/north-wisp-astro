---
import ProgramsList from "../components/ProgramsList.astro";
import ReviewCard from "../components/ReviewCard.astro";
import TeamInfoSection from "../components/TeamInfoSection.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/landing.css";
import { reviews } from "../data/reviews";
---

<BaseLayout pageTitle="North Wisp">
  <section class="section">
    <div class="hero">
      <div class="image-container">
        <img
          class="image"
          src="/images/landing/landing_hero.svg"
          width="792"
          height="578"
        />
      </div>
      <h1 class="page-title">Learn Irish Online</h1>
      <p class="section-text">
        Flexible program, progress analysis, speaking practice with foreigners
      </p>
      <div class="button-holder">
        <button class="button">First lesson free</button>
      </div>
    </div>
  </section>

  <section class="section hero__features-section">
    <ul class="hero__features">
      <li class="hero__feature">
        <h2 class="hero__feature__number">01</h2>
        <h3 class="hero__feature__title">Native language teachers</h3>
        <p class="hero__feature__description">
          North Wisp teachers are certified professionals who speak fluent
          Irish.
        </p>
      </li>
      <li class="hero__feature">
        <h2 class="hero__feature__number">02</h2>
        <h3 class="hero__feature__title">We focus on you</h3>
        <p class="hero__feature__description">
          We determine your level, draw up a program “for you”, give
          recommendations on the pace of classes, support, motivate.
        </p>
      </li>
      <li class="hero__feature">
        <h2 class="hero__feature__number">03</h2>
        <h3 class="hero__feature__title">Unique Method</h3>
        <p class="hero__feature__description">
          You get the experience of communication immediately, consolidate
          knowledge in practice.
        </p>
      </li>
      <li class="hero__feature">
        <h2 class="hero__feature__number">04</h2>
        <h3 class="hero__feature__title">Support 24/7</h3>
        <p class="hero__feature__description">
          The 24/7 care department is ready to answer all your questions.
        </p>
      </li>
    </ul>
  </section>

  <section class="section">
    <h2 class="section-title">Programs</h2>
    <p class="section-text" style="margin-bottom: 30px;">
      The North Wisp school program is a unique opportunity for students to
      immerse themselves in the Irish language and the culture of Ireland.
    </p>
    <ProgramsList count={3} />
    <div class="right-aligned-button">
      <a href="/programs" class="button">See all</a>
    </div>
  </section>

  <TeamInfoSection />

  <section class="section consultation-section">
    <h2 class="section-title">Free consultation</h2>
    <div class="consultation__image-container">
      <img
        src="/images/landing/duck.png"
        class="image"
        width="427"
        height="446"
      />
    </div>
    <p class="section-text">
      We will determine your language level and help you understand which
      learning format is right for you.
    </p>
    <div class="consultation__button-container">
      <button class="button">Submit your application</button>
    </div>
  </section>

  <section class="section">
    <h2 class="section-title">Reviews</h2>
    <div class="reviews-container">
      {reviews.map((review) => <ReviewCard {...review} />)}
    </div>
    <div class="right-aligned-button">
      <button class="button">See all</button>
    </div>
  </section>
</BaseLayout>
